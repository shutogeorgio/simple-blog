<% content_for :page_title, "Native Blog App" %>

<section class="section">
  <div class="container">
    <% @posts.each do |post| %>
      <div class="card">
         <div class="card-content">
          <div class="media">
            <p class="title is-4"><%= link_to post.title, post %></p>
          </div>
           <div class="content">
            <%= post.content %>
          </div>
        </div>
        <div class="comment-count">
          <span class="tag is-rounded"></span>
        </div>
      </div>
    <% end %>
  </div>
</section>